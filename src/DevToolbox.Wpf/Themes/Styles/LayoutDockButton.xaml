<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DevToolbox.Wpf.Controls"
    xmlns:helpers="clr-namespace:DevToolbox.Wpf.Helpers">

    <Style TargetType="{x:Type controls:LayoutDockButton}">
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="FontSize" Value="{DynamicResource FontSize12}" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Command" Value="{x:Static controls:LayoutDockButton.ShowHideOverlayCommand}" />
        <Setter Property="Background" Value="{DynamicResource DockingButton.Background}" />
        <Setter Property="Foreground" Value="{DynamicResource DockingButton.Foreground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource DockingButton.BorderBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:LayoutDockButton}">
                    <Border
                        Name="PART_Border"
                        Margin="0,0,12,0"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{Binding RelativeSource={RelativeSource Mode=TemplatedParent}, Path=(helpers:UIElementHelper.CornerRadius)}"
                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <StackPanel x:Name="MainContent" Orientation="Horizontal">
                                <Image
                                    Width="16"
                                    Height="16"
                                    Margin="2"
                                    Source="{TemplateBinding Icon}"
                                    Stretch="Uniform" />
                                <ContentPresenter TextElement.FontSize="{TemplateBinding FontSize}" />
                            </StackPanel>
                            <Border
                                x:Name="AccentChrome"
                                Grid.Row="1"
                                BorderBrush="{DynamicResource AccentDark1Brush}"
                                BorderThickness="3" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="AccentChrome" Property="BorderBrush" Value="{DynamicResource AccentLight1Brush}" />
                        </Trigger>
                        <Trigger Property="Dock" Value="Left">
                            <Setter TargetName="PART_Border" Property="Margin" Value="0,0,12,0" />
                            <Setter TargetName="AccentChrome" Property="Grid.Row" Value="1" />
                            <Setter TargetName="MainContent" Property="Grid.Row" Value="0" />
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="Dock" Value="Right">
                            <Setter TargetName="PART_Border" Property="Margin" Value="0,0,12,0" />
                            <Setter TargetName="AccentChrome" Property="Grid.Row" Value="0" />
                            <Setter TargetName="MainContent" Property="Grid.Row" Value="1" />
                            <Setter Property="LayoutTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="90" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="Dock" Value="Bottom">
                            <Setter TargetName="PART_Border" Property="CornerRadius" Value="4,4,0,0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>