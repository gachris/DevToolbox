<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DevToolbox.Wpf.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/DevToolbox.Wpf;component/Themes/Styles/TabControlEdit.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource ResourceKey={x:Type controls:TabControlEdit}}" TargetType="{x:Type controls:DocumentControl}">
        <Setter Property="ShowAddTabButton" Value="False" />
        <Setter Property="IsSynchronizedWithCurrentItem" Value="True" />
    </Style>

</ResourceDictionary>