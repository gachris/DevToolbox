<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:DevToolbox.Wpf.Controls"
    xmlns:windows="clr-namespace:DevToolbox.Wpf.Windows">

    <Style TargetType="{x:Type windows:SliderWindow}">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type windows:SliderWindow}">
                    <controls:SliderControl
                        x:Name="PART_SliderControl"
                        AutoHide="{Binding Path=AutoHide, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=windows:SliderWindow}}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        Dock="{Binding Path=Dock, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=windows:SliderWindow}}"
                        EasingFunction="{Binding Path=EasingFunction, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=windows:SliderWindow}}"
                        ExpandSize="{Binding Path=ExpandSize, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=windows:SliderWindow}}"
                        IsExpanded="{Binding Path=IsExpanded, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=windows:SliderWindow}}"
                        IsGlowEnable="False">
                        <AdornerDecorator>
                            <ContentPresenter />
                        </AdornerDecorator>
                    </controls:SliderControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>