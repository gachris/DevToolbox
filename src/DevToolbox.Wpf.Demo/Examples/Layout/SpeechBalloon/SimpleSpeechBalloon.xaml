<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:devtoolbox="http://devtoolbox.wpf/winfx/2021/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=netstandard"
    Width="600"
    d:Width="800"
    mc:Ignorable="d">
    <devtoolbox:SpeechBalloon
        Grid.Column="1"
        HorizontalContentAlignment="Stretch"
        VerticalContentAlignment="Stretch"
        CornerRadius="6"
        FocusVisualStyle="{x:Null}"
        IsTabStop="False"
        SpeechBalloonPlacement="Bottom">
        <TextBlock
            Width="400"
            Margin="4"
            Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Etiam elit sem, tristique quis mollis ac, elementum ac orci. Nunc tincidunt tincidunt justo, luctus cursus ex tempus non. Pellentesque iaculis quam ac mi fermentum."
            TextAlignment="Justify"
            TextWrapping="Wrap" />
    </devtoolbox:SpeechBalloon>
</UserControl>