<Menu xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <MenuItem Header="File">
        <MenuItem Header="New">
            <MenuItem Header="Start Window" InputGestureText="Ctrl+N" />
            <MenuItem Header="Start Window From Svg" InputGestureText="Ctrl+S+N" />
        </MenuItem>
        <MenuItem Header="Open">
            <MenuItem Header="From Svg" InputGestureText="Ctrl+S+O" />
        </MenuItem>
        <Separator />
        <MenuItem Header="Save" InputGestureText="Ctrl+S" />
        <MenuItem Header="Save As.." />
        <MenuItem Header="Save All" InputGestureText="Ctrl+Shift+S" />
        <Separator />
        <MenuItem Header="Print" InputGestureText="Ctrl+P" />
        <Separator />
        <MenuItem Header="Close" />
        <Separator />
        <MenuItem Header="Exit" InputGestureText="Alt+F4" />
    </MenuItem>
    <MenuItem Header="Tools">
        <MenuItem Header="Theme">
            <MenuItem Header="Default" IsChecked="True" />
            <MenuItem Header="Dark" />
            <MenuItem Header="Light" />
        </MenuItem>
    </MenuItem>
</Menu>