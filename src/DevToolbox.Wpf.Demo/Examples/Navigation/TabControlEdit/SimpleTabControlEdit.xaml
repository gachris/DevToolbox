<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:devtoolbox="http://devtoolbox.wpf/winfx/2021/xaml/presentation"
    HorizontalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    VerticalContentAlignment="Stretch">
    <devtoolbox:TabControlEdit
        CloseButtonShowMode="NoWhere"
        ShowAddTabButton="False"
        SwapTabsButtonShowMode="Hidden">
        <devtoolbox:TabItemEdit Header="Home">
            <TextBlock Text="Welcome to the Home tab!" />
        </devtoolbox:TabItemEdit>

        <devtoolbox:TabItemEdit Header="Settings">
            <StackPanel>
                <TextBlock Text="Settings Overview:" />
                <CheckBox Content="Enable Notifications" />
                <CheckBox Content="Enable Dark Mode" />
            </StackPanel>
        </devtoolbox:TabItemEdit>

        <devtoolbox:TabItemEdit Header="About">
            <TextBlock Text="This is the About tab with information." />
        </devtoolbox:TabItemEdit>
    </devtoolbox:TabControlEdit>
</UserControl>