<UserControl
    x:Class="DevToolbox.Wpf.Demo.Views.SystemBackdrop"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="Transparent">
    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <RadioButton
            MinWidth="0"
            Margin="0,0,40,0"
            Checked="RadioButton_Checked"
            Content="None"
            Tag="0" />
        <RadioButton
            MinWidth="0"
            Margin="0,0,40,0"
            Checked="RadioButton_Checked"
            Content="Acrylic"
            Tag="1" />
        <RadioButton
            MinWidth="0"
            Margin="0,0,40,0"
            Checked="RadioButton_Checked"
            Content="Mica"
            Tag="2" />
        <RadioButton
            MinWidth="0"
            Checked="RadioButton_Checked"
            Content="Tabbed"
            Tag="3" />
    </StackPanel>
</UserControl>
