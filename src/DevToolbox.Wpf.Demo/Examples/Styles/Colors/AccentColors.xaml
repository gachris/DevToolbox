<UserControl
    x:Class="DevToolbox.Wpf.Demo.Examples.Styles.Colors.AccentColors"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:devtoolbox="http://devtoolbox.wpf/winfx/2021/xaml/presentation"
    xmlns:local="clr-namespace:DevToolbox.Wpf.Demo.Examples.Styles.Colors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer>
        <ScrollViewer.Resources>
            <ResourceDictionary>

                <!--  Background  -->
                <DynamicResourceExtension x:Key="Background" ResourceKey="{x:Static devtoolbox:AccentColors.BackgroundColorKey}" />
                <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}" />

                <!--  Foreground  -->
                <DynamicResourceExtension x:Key="Foreground" ResourceKey="{x:Static devtoolbox:AccentColors.ForegroundColorKey}" />
                <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource Foreground}" />

                <!--  Darkest accent  -->
                <DynamicResourceExtension x:Key="AccentDark3" ResourceKey="{x:Static devtoolbox:AccentColors.AccentDark3ColorKey}" />
                <SolidColorBrush x:Key="AccentDark3Brush" Color="{StaticResource AccentDark3}" />

                <!--  Darker accent  -->
                <DynamicResourceExtension x:Key="AccentDark2" ResourceKey="{x:Static devtoolbox:AccentColors.AccentDark2ColorKey}" />
                <SolidColorBrush x:Key="AccentDark2Brush" Color="{StaticResource AccentDark2}" />

                <!--  Slightly dark accent  -->
                <DynamicResourceExtension x:Key="AccentDark1" ResourceKey="{x:Static devtoolbox:AccentColors.AccentDark1ColorKey}" />
                <SolidColorBrush x:Key="AccentDark1Brush" Color="{StaticResource AccentDark1}" />

                <!--  Base accent  -->
                <DynamicResourceExtension x:Key="Accent" ResourceKey="{x:Static devtoolbox:AccentColors.AccentColorKey}" />
                <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />

                <!--  Slightly light accent  -->
                <DynamicResourceExtension x:Key="AccentLight1" ResourceKey="{x:Static devtoolbox:AccentColors.AccentLight1ColorKey}" />
                <SolidColorBrush x:Key="AccentLight1Brush" Color="{StaticResource AccentLight1}" />

                <!--  Light accent  -->
                <DynamicResourceExtension x:Key="AccentLight2" ResourceKey="{x:Static devtoolbox:AccentColors.AccentLight2ColorKey}" />
                <SolidColorBrush x:Key="AccentLight2Brush" Color="{StaticResource AccentLight2}" />

                <!--  Lightest accent  -->
                <DynamicResourceExtension x:Key="AccentLight3" ResourceKey="{x:Static devtoolbox:AccentColors.AccentLight3ColorKey}" />
                <SolidColorBrush x:Key="AccentLight3Brush" Color="{StaticResource AccentLight3}" />

                <!--  Complement  -->
                <DynamicResourceExtension x:Key="Complement" ResourceKey="{x:Static devtoolbox:AccentColors.ComplementColorKey}" />
                <SolidColorBrush x:Key="ComplementBrush" Color="{StaticResource Complement}" />

            </ResourceDictionary>
        </ScrollViewer.Resources>
        <UniformGrid>
            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource AccentBrush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="Accent" />
            </StackPanel>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource AccentLight1Brush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="AccentLight1" />
            </StackPanel>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource AccentLight2Brush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="AccentLight2" />
            </StackPanel>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource AccentLight3Brush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="AccentLight3" />
            </StackPanel>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource AccentDark1Brush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="AccentDark1" />
            </StackPanel>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource AccentDark2Brush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="AccentDark2" />
            </StackPanel>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource AccentDark3Brush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="AccentDark3" />
            </StackPanel>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Rectangle
                    Width="100"
                    Height="100"
                    Fill="{StaticResource ComplementBrush}"
                    RadiusX="10"
                    RadiusY="10" />
                <TextBlock
                    Margin="5,5,5,0"
                    HorizontalAlignment="Center"
                    Text="Complement" />
            </StackPanel>
        </UniformGrid>
    </ScrollViewer>
</UserControl>
